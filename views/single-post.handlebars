<div class="py-5">
    <div class="card-body p-5">
        <div class="card shadow mb-4">
            <div class="card-body shadow-sm p-5">
                <h2 class="text-muted">{{post.title}}</h2>
                <p class="font-italic">Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do
                    eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud
                    exercitation ullamco laboris nisi ut aliquip.</p>
                <p class="font-italic text-muted">Posted by {{post.user.username}} on {{post.created_at}}</p>
            </div>
        </div>
    </div>
</div>
<div class="post">
    <article class="card">
        <div class="card-header flex-row justify-space-between">
            <h2>{{post.title}}</h2>
            <div>
                Posted by {{post.User.username}} on {{format_date post.createdAt}}
            </div>
        </div>
        <div class="card-body">
            {{post.body}}
        </div>
    </article>

    {{#if post.Comments}}
    <section class="card">
        <div class="card-header">
            <h3>Comments</h3>
        </div>

        <div class="card-body">
            {{#each post.Comments}}
            <div>
                <p>
                    {{body}}
                </p>
                <p>
                    &mdash; {{User.username}}, {{format_date createdAt}}
                </p>
            </div>
            {{/each}}
        </div>
    </section>
    {{/if}}

    <form id="new-comment-form" class="card">
        <div class="card-header">
            <h3>Add a Comment</h3>
        </div>

        <div class="card-body">
            <input type="hidden" name="post-id" value="{{post.id}}" />

            <label class="form-label" for="comment-body">Comment</label>

            <textarea name="comment-body" class="form-input"></textarea>

            <button type="submit" class="btn">Submit</button>
        </div>
    </form>
</div>