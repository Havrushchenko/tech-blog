<div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-12 col-md-8 col-lg-6 col-xl-5">
            <div class="card shadow-2-strong" style="border-radius: 1rem;">
                <div class="login-form card-body p-5 text-center">
                    <h3 class="mb-5">Log in</h3>
                    <div class="form-outline mb-4">
                        <input type="username" id="username-login" class="form-control form-control-lg" />
                        <label class="form-label" for="username-login">User Name</label>
                    </div>
                    <div class="form-outline mb-4">
                        <input type="password" id="password-login" class="form-control form-control-lg" />
                        <label class="form-label" for="password-login">Password</label>
                    </div>
                    <button class="btn btn-primary btn-lg btn-block" type="submit">Login</button>
                    <hr class="my-4">
                </div>
                <div class="signup-form card-body p-5 text-center">
                    <h3 class="mb-5">Sign Up</h3>
                    <div class="form-outline mb-4">
                        <input type="username" id="username-signup" class="form-control form-control-lg" />
                        <label class="form-label" for="username-signup">User Name</label>
                    </div>
                    <div class="form-outline mb-4">
                        <input type="password" id="password-signup" class="form-control form-control-lg" />
                        <label class="form-label" for="password-signup">Password</label>
                    </div>
                    <button class="btn btn-primary btn-lg btn-block" type="submit">Sign Up</button>
                    <hr class="my-4">
                </div>
            </div>
        </div>
    </div>
</div>
<script src="/public/javascript/login.js"></script>